{
    "name": "Find endpoints with uptime > 1.5 years",
    "description": {
        "author": "Julien Vehent",
        "email": "ulfr@mozilla.com",
        "revision": 201408261000
    },
    "target": "agents.os = 'linux'",
    "threat": {
        "level": "-",
        "type": "system",
        "family": "search"
    },
    "operations": [
        {
            "module": "filechecker",
            "parameters": {
                "/proc/uptime": {
                    "regex": {
                        "Look for high uptime": [
                            "^[5-9]{1}[0-9]{7,}\\."
                        ]
                    }
                }
            }
        }
    ],
    "syntaxversion": 2
}
