; api configuration used in standalone docker demo mode

[authentication]
    enabled = on
    tokenduration = 10m

[manifest]
    requiredsignatures = 1

[server]
    ip = "127.0.0.1"
    port = 1664
    host = "http://localhost:4444"
    baseroute = "/api/v1"
    clientpublicip = peer

[postgres]
    host = "127.0.0.1"
    port = 5432
    dbname = "mig"
    user = "migapi"
    password = "APIPASS"
    sslmode = "disable"

[logging]
    mode = "stdout"
    level = "debug"
